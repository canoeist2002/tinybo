<li>
  <div class="gravatar pull-left"><%= image_tag micropost.user.gravatar_url %></div>
  <div class="infos">
    <div class="content"><%= wrap(micropost.content) %></div>
    
    <div class="timestamp">
      <% if microposts_path %>

        by <%= micropost.user.name %>　　
      <% end %>
    
      发布于：<%= time_ago_in_words(micropost.created_at) %>前。
      <% if current_user == micropost.user %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "你确定删除么?" },
                                       title: micropost.content %>
      <% end %>
    </div>
  </div>
</li>